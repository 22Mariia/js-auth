{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>

        <div class="form">
            <div class="form__item">
                {{>field action="signupForm.change" label="E-mail" type="email" name="email" placeholder="Ваша електронна адреса"}}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Введіть ваш пароль" action="signupForm.change" label="Пароль"
                type="password"
                name="password"}}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Повторіть свій пароль" action="signupForm.change" label="Повторіть свій пароль"
                type="password"
                name="passwordAgain"}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-select placeholder="Виберіть свою роль" action="signupForm.change" label="Роль" list=data.role
                type="select"
                name="role"}}
                <span name="role" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-checkbox label="Я згоден з умовами послуги" action="signupForm.change"
                name="isConfirm"}}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Зареєструватися</button>
        <span class="alert alert--disabled">Увага, помилка!</span>
        <span class="link__prefix">Вже зареєстровані? <a href="/login" class="link">Логін</a></span>
    </form>
</div>

