{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Сторінка підтвердження відновлення</h1>

        <div class="form">
            <div class="form__item">
                {{>field placeholder="Ваш код" action="recoveryConfirmForm.change" label="Код" type="number"
                name="code" }}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Введіть новий пароль" action="recoveryConfirmForm.change" label="Новий
                 пароль"
                type="password"
                name="password"}}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password placeholder="Повторіть новий пароль" label="Повторіть новий пароль"
                action="recoveryConfirmForm.change"
                type="password"
                name="passwordAgain"}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Оновіть свій
             пароль</button>
        <span class="alert alert--disabled">Увага, помилка!</span>
    </form>
</div>


